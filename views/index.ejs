<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>House Listings</title>
  <link rel="stylesheet" href="/style.css">
</head>
<body>
  <header>
    <h1>House Listings</h1>
    <div class="add-house-tab">
      <a href="/add">Add New House</a>
    </div>
  </header>

  <main class="house-list">
    <% if (houses.length === 0) { %>
      <p>No houses found.</p>
    <% } else { %>
      <% houses.forEach(house => { %>
        <a href="/house/<%= house._id %>" class="house-card-link">
          <div class="house-card">
            <img src="<%= house.imageUrl %>" alt="House Image">
            <div class="house-details">
              <h3><%= house.name %></h3>
              <p><%= house.location %></p>
              <p>Price: $<%= house.price %></p>
            </div>
          </div>
        </a>
      <% }) %>
    <% } %>
  </main>
</body>
</html>